@model F4ConversationCloud.ClientAdmin.Models.AuthViewModel.ConfirmPasswordViewModel;
@{
    Layout = null;
    ViewData["Title"] = "set new password";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | Fortune4 Cloud Coversation</title>
    <link rel="stylesheet" href="~/css/gupshuplogin.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="../css/login.css">
</head>

<body>
    <div class="login-page">
        <div class="left-section">

            <span class="login-bg">
                <div class="fortune4-login">
                    
                    <img src="/images/logo.svg" />
                </div>
            </span>
        </div>
        <div class="right-section">
            <div class="login-bx">
                <h5 class="mb-4">Create New Password</h5>
                
                <form asp-action="SetPassword" asp-controller="Onboarding" method="post">
                    @* <div class="form-group mb-3">
                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Old Password">
                    </div> *@
                    <input type="hidden" asp-for="UserId">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <div class="d-flex password-wrap">
                        <input type="password" asp-for="Password" class="form-control" id="password" placeholder="New Password">
                        <i class="toggle-password fa fa-fw fa-eye-slash"></i>
                        </div>
                        <span asp-validation-for="Password" class="error-message text-danger small"></span>
                    </div>
                    <div class="form-group mb-3">
                        <div class="d-flex password-wrap">
                            <input type="password" asp-for="ConfirmPassword" class="form-control" id="cpassword" placeholder="Confirm Password">
                            <i class="toggle-password fa fa-fw fa-eye-slash"></i>
                        </div>
                        
                        <span asp-validation-for="ConfirmPassword" class="error-message text-danger small"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mt-2" id="showToastBtn">Confirm</button>
                </form>
                <br />
                <div class="alert alert-danger alert-note">
                    <ul>
                        <li>Password should be atleast 8 character long</li>
                        <li>Password should contain atleast one uppercase</li>
                        <li>Password should contain atleast one lowercase</li>
                        <li>Password should contain atleast one special character</li>
                        <li>Password should contain atleast one number</li>
                    </ul>
                </div>

                @* <span class="d-flex justify-content-center new-user">
                    New User?
                    <a href="#"> Register </a>
                </span> *@


            </div>
        </div>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <input type="hidden" class="temp-message" data-type="success" value="@TempData["SuccessMessage"]" />
    }
    @if (TempData["WarningMessage"] != null)
    {
        <input type="hidden" class="temp-message" data-type="warning" value="@TempData["WarningMessage"]" />
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <input type="hidden" class="temp-message" data-type="danger" value="@TempData["ErrorMessage"]" />
    }
    <div class="loader-wrapper" id="loader">
        <div class="loader"></div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/commonhelper.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/commonhelper.js" asp-append-version="true"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/unobtrusiveHelper.js"></script>

   
</body>
</html>
