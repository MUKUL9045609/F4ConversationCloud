@model F4ConversationCloud.SuperAdmin.Models.TemplateViewModel

<ul class="sub-category-listing">
    @if (Model.AuthenticationTemplateTypeList is not null)
    {
        @foreach (var t in Model.AuthenticationTemplateTypeList)
        {
            <li>
                <div class="form-check radio-btn template-radio">
                    <input asp-for="TemplateType" class="form-check-input"
                           type="radio"
                           id="@t.Value"
                           value="@t.Value" checked="@(t.Text == "One Time Passcode")" />
                    <div>
                        <label class="form-check-label" for="flexRadioDefault1">
                            @t.Text

                            @if (t.Text == "One Time Passcode")
                            {
                                <p>Send messages with media and customised buttons to engage your customers.</p>
                            }
                        </label>
                    </div>
                </div>
            </li>
        }
    }
</ul>