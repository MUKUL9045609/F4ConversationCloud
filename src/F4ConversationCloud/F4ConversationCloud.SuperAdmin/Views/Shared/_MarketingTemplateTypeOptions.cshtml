@model F4ConversationCloud.SuperAdmin.Models.TemplateViewModel

<ul class="sub-category-listing">
    @if (Model.MarketingTemplateTypeList is not null)
    {
        foreach (var t in Model.MarketingTemplateTypeList)
        {
            <li>
                <div class="form-check radio-btn template-radio">
                    <input asp-for="TemplateType" class="form-check-input"
                           type="radio"
                           id="@t.Value"
                           value="@t.Value" checked="@(t.Text == "Default")" />
                    <div>
                        <label class="form-check-label" for="@t.Value">
                            @t.Text

                            @if (t.Text == "Default")
                            {
                                <p>Send messages with media and customised buttons to engage your customers.</p>
                            }
                            else if (t.Text == "Catalogue")
                            {
                                <p>Send messages that drive sales by connecting your product catalogue.</p>
                            }
                            else if (t.Text == "Calling permissions request")
                            {
                                <p>Ask customers if you can call them on WhatsApp</p>
                            }
                            else if (t.Text == "Carousel")
                            {
                                <p>Send visually engaging messages using multiple media cards — including images, videos, or documents — to showcase your products or offers in a more interactive way.</p>
                            }
                        </label>
                    </div>
                </div>
            </li>
        }
    }
</ul>