            commonHelper.showHideLoader(true);
            $('#partialForTemplateForm').hide();
            $('#first-page').show();
            $('#next-btn').show();
            $('#discard-btn').show();
            $('#submit-btn').hide();
            $('#previous-btn').hide();
            commonHelper.showHideLoader(false);
        });

