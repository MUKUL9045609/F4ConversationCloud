@model F4ConversationCloud.Application.Common.Models.OnBoardingModel.ConfirmPasswordViewModel;
@{
    Layout = null;
    ViewData["Title"] = "set new password";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | Fortune4 Cloud Coversation</title>
    <link rel="stylesheet" href="~/css/gupshuplogin.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />

</head>

<body>
    <div class="login-page">
        <div class="left-section">

            <span class="login-bg">
                <div class="fortune4-login">
                    
                    <img src="/images/logo.svg" />
                </div>
            </span>
        </div>
        <div class="right-section">
            <div class="login-bx">
                <h5 class="mb-4">Create New Password</h5>
                <div>
                    <ul>
                        <li>Password should be atleast 8 Character long</li>
                        <li>Password should contain atleast one Uppercase</li>
                        <li>Password should contain atleast one lowercase</li>
                        <li>Password should contain atleast one special Character</li>
                        <li>Password should contain atleast one number</li>
                    </ul>
                </div>
                <form asp-action="SetPassword" asp-controller="Onboarding" method="post">
                    @* <div class="form-group mb-3">
                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Old Password">
                    </div> *@
                    <input type="hidden" asp-for="UserId" value="1">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <input type="password" asp-for="Password" class="form-control" id="password" placeholder="New Password">
                        <span asp-validation-for="Password" class="error-message text-danger small"></span>
                    </div>
                    <div class="form-group mb-3">
                        <input type ="password" asp-for="ConfirmPassword" class="form-control" id="cpassword" placeholder="Confirm Password">
                        <span asp-validation-for="ConfirmPassword" class="error-message text-danger small"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mt-2" id="showToastBtn">Confirm</button>
                </form>
                

                @* <span class="d-flex justify-content-center new-user">
                    New User?
                    <a href="#"> Register </a>
                </span> *@


            </div>
        </div>
    </div>
    <div class="toastWrap">
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/commonhelper.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/commonhelper.js" asp-append-version="true"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/unobtrusiveHelper.js"></script>

    <script>
        

         $(document).ready(function () {
              var errorMessage = '@TempData["ErrorMessage"]';
              var warningMessage = '@TempData["WarningMessage"]';
              var showSuccessMessage = '@TempData["SuccessMessage"]';
              if (errorMessage) {
                  showToast(errorMessage, "danger");
              }

              if (warningMessage) {
                  showToast(warningMessage, "warning");
              }
              if (showSuccessMessage) {
                  showToast(warningMessage, "success");
              }
          });
        $(window).on('load', function () {
            $('.loader-wrapper').fadeOut('slow');
        });
    </script>
</body>
</html>
